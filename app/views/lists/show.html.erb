<div class="container">
  <div class="d-flex justify-content-between align-items-start mt-5">
    <h1><%= @list.name %></h1>
    <%= link_to "Back", lists_path, class: "btn btn-primary"%>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-start mt-3 ms-3">

    <h3>Movies</h3>
      <div class="container d-flex">
        <% @list.movies.each do |movie| %>
          <div class="card" style="width: 18rem;">
            <img src=<% movie.poster_url %> class='card-img-top'>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.overview%></p>
              <div class="d-flex">
              <div class="d-flex">
                <i class="fa-solid fa-star text-info"></i>
                <p class="text-info"><%= movie.rating %></p>
              </div>
                <%link_to "Delete",
                list_path,
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger"
                %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
  <div class="d-flex justify-content-between align-items-start mt-3 ms-3">
    <h3>Bookmarks</h3>
    <%= link_to "+ Add a bookmark", new_list_bookmark_path(@list) , class: "btn btn-success text-white"%>
  </div>
</div>
