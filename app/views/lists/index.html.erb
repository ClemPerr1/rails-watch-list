<div class="container">
  <div class="d-flex justify-content-between align-items-start mt-10">
    <h1>Movies lists available</h1>
    <%= link_to "Create a list", new_path, class: "btn btn-primary"%>
  </div>
</div>

<div class="container">
  <ul class="list-group">
    <% @lists.each do | list |%>
      <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
          <div class="fw-bold"><%list.name%></div>
        </div>
        <div class="ms-2 me-auto">
          <i class="fa-solid fa-film text-warning "></i>
          <span class="badge bg-warning rounded-pill"><%list.movies.length%></span>
          <i class="fa-regular fa-bookmark text-success"></i>
          <span class="badge bg-success rounded-pill"><%list.bookmarks.length%></span>
        </div>
      </button>
    <% end %>
  </ul>
</div>
