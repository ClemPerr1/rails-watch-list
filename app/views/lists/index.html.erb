<div class="container">
  <div class="d-flex justify-content-between align-items-start mt-5">
    <h1>Movies lists available</h1>
    <%= link_to "Create a list", new_list_path, class: "btn btn-primary"%>
  </div>
</div>

<div class="container mt-5">
  <ul class="list-group">
    <% @lists.each do | list |%>
      <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto w-100">
          <div class="fw-bold">
          <%= link_to list.name, list_path(list) %>
          </div>
        </div>
        <div class="ms-2 me-auto w-100">
          <i class="fa-solid fa-film text-danger "></i>
          <span class="badge bg-danger rounded-pill"><%= list.movies.count %></span>
          <i class="fa-regular fa-bookmark text-success"></i>
          <span class="badge bg-success rounded-pill"><%= list.bookmarks.count %></span>
        </div>
      </button>
    <% end %>
  </ul>
</div>
